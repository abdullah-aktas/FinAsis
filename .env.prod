# Django ayarları
DJANGO_SECRET_KEY=your-secure-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=finasis.com.tr,www.finasis.com.tr,api.finasis.com.tr
DJANGO_SETTINGS_MODULE=config.settings.prod

# Veritabanı ayarları
DB_ENGINE=django.db.backends.postgresql
DB_NAME=finasis_prod
DB_USER=finasis_prod_user
DB_PASSWORD=your-secure-db-password
DB_HOST=your-gcp-sql-instance-ip
DB_PORT=5432

# Email ayarları
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=info@finasis.com.tr

# AI Assistant ayarları
AI_ASSISTANT_API_KEY=your-openai-api-key
AI_ASSISTANT_MODEL=gpt-3.5-turbo
AI_ASSISTANT_MAX_TOKENS=1000

# Blockchain
WEB3_PROVIDER_URL=your-production-web3-provider-url
SMART_CONTRACT_ADDRESS=your-production-smart-contract-address

# OpenAI settings
OPENAI_API_KEY=your-production-openai-api-key

# Blockchain settings
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_API_KEY=your-production-blockchain-api-key

# Redis URL
REDIS_URL=redis://your-redis-instance:6379/1

# E-Belge API ayarları
EDOCUMENT_ENV=PROD
EDOCUMENT_API_KEY=your-production-api-key
EDOCUMENT_API_URL=https://earsiv.efatura.gov.tr
EDOCUMENT_SERVICE_TYPE=EARCHIVE

# Şirket Bilgileri
COMPANY_VKN=1234567890
COMPANY_NAME=FinAsis Yazılım A.Ş.
COMPANY_WEBSITE=https://finasis.com.tr
COMPANY_EMAIL=info@finasis.com.tr

# Rate limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# JWT Token Ayarları
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1
JWT_MOBILE_TOKEN_LIFETIME_MINUTES=30
JWT_ADMIN_TOKEN_LIFETIME_HOURS=2
JWT_REMEMBER_ME_LIFETIME_DAYS=7
JWT_SLIDING_TOKEN_LIFETIME_MINUTES=30
JWT_SLIDING_TOKEN_REFRESH_LIFETIME_DAYS=1

# Brute Force Koruma Ayarları
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_TIME_MINUTES=15

# API Keys
OPENWEATHER_API_KEY=your-production-openweather-api-key
ALPHA_VANTAGE_API_KEY=your-production-alpha-vantage-api-key

# E-Dönüşüm Ayarları
AUTO_STOCK_ENTRY=True

# OCR Ayarları
USE_GOOGLE_VISION=True
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/production-google-credentials.json
OCR_LANGUAGE=tur+eng 